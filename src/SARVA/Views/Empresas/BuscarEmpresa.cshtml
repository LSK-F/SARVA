@model SARVA.Models.Empresa
@{
    ViewData["Title"] = "Buscar Empresa";

    int requisitando = Convert.ToInt32(ViewBag.Requisitando);
    string nome_cliente = Convert.ToString(ViewBag.NomeCliente);
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<link href="~/css/BuscarEmpresa.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>

<div class="titulo">
    <br /><br /><br />
    <h1 style="text-align:center;color:white;font-size:48px;">Buscar Empresa</h1>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="text-center">
        <a asp-controller="Empresas" asp-action="AdicionarEmpresa" style="font-size: 18px;">Nova Empresa</a>
    </div>
}

<br /><br />

<div class="container d-flex justify-content-center">
    <div class="col-md-6">
        @switch (requisitando)
        {
            case 1: // Requisitar Produto (Vendedor)
            case 3: // Adicionar novo Produto (Admin)
                <form asp-controller="Produtos" asp-action="AdicionarProdutoRequisitado" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="razao_social" class="form-label">Nome da Empresa</label>
                        <input asp-for="razao_social" class="form-control" id="razaoSocial" placeholder="Digite para buscar..." />
                        <span asp-validation-for="razao_social" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-light">Continuar</button>
                        @if (requisitando == 1)
                        {
                            <a asp-controller="Vendas" asp-action="LerDadosVenda" class="btn btn-warning">Voltar</a>
                        }
                        else
                        {
                            <a asp-controller="Produtos" asp-action="CatalogoProdutos" asp-route-idVenda="-1" asp-route-idEmpresa="-1" class="btn btn-warning">Voltar</a>
                        }
                    </div>
                </form>
                break;

            case 2: // Adicionar Venda
                <form asp-controller="Vendas" asp-action="AdicionarVenda" asp-route-nomeCliente="@nome_cliente" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="razao_social" class="form-label">Nome da Empresa</label>
                        <input asp-for="razao_social" class="form-control" id="razaoSocial" placeholder="Digite para buscar..." />
                        <span asp-validation-for="razao_social" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-info">Continuar</button>
                        <a asp-controller="Vendas" asp-action="LerDadosVenda" class="btn btn-warning">Voltar</a>
                    </div>
                </form>
                break;

            case 4: // Adicionar Pedido
                <form asp-controller="Pedidos" asp-action="AdicionarPedido" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="razao_social" class="form-label">Nome da Empresa</label>
                        <input asp-for="razao_social" class="form-control" id="razaoSocial" placeholder="Digite para buscar..." />
                        <span asp-validation-for="razao_social" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-center gap-3">
                        <button type="submit" class="btn btn-info">Continuar</button>
                        <a asp-controller="Pedidos" asp-action="LerDadosPedido" class="btn btn-warning">Voltar</a>
                    </div>
                </form>
                break;
        }
    </div>
</div>


<script>
    $(function () {
        $("#razaoSocial").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Empresas/GetSearchValue",
                    dataType: "json",
                    type: "POST",
                    data: {
                        search: $("#razaoSocial").val()
                    },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.razaoSocial, value: item.razaoSocial }
                        }));
                    },
                    minLength: 2,
                    error: function (xhr, status, error) {
                        alert("Error");
                    }
                });
            }
        });
    });
</script>