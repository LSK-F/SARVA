@model SARVA.Models.Ciclo

@{
    ViewData["Title"] = "EditarCiclo";
}

<h1>EditarCiclo</h1>

<h4>Ciclo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Ciclos" asp-action="EditarCiclo" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="id" />

            <div class="form-group">
                <label asp-for="nome" class="control-label">Nome do Ciclo</label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="dataInicio" class="control-label">Data de Início</label>
                <input asp-for="dataInicio" class="form-control" />
                <span asp-validation-for="dataInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="dataFim" class="control-label">Data de Encerramento</label>
                <input asp-for="dataFim" class="form-control" />
                <span asp-validation-for="dataFim" class="text-danger"></span>
            </div>

            <br>

            <div class="form-group">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<br>

<div>
    <a asp-controller="Ciclos" asp-action="LerDadosCiclo">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
